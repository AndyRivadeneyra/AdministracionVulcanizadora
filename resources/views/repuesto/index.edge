<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>REPUESTOS</title>
</head>
  <body>
    <div>
      <nav class="text-center">
          <div class="btn-group" role="group" aria-label="Basic example">
              <a class="btn btn-success" href="/clientes">CLIENTES</a>
              <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
              <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
              <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
          </div>
      </nav>
     
      <div>
        <div class="text-center">
          <h1 class="alert alert-warning" role="warning">REFACCIONES</h1>
          <div>
              <div>
                <div>
                 
                  <div>
                    <a class="btn btn-warning" href="/repuestos/crear">AGREGAR REFACCION</a>
                    <a class="btn btn-warning" href="/hoja_de_parte">AGREGAR HOJAS DE PARTES</a>
                  </div>
                </div>
              </div>
              <div>
                <div>
                 
                  <div>
                  </div>
                </div>
              </div>
            </div>
            <div>
              <div>
                <table>
                    <thead>
                      <tr>
                        <th class="alert alert-info" role="info">ID</th>
                        <th class="alert alert-info" role="info">Descripcion</th>
                        <th class="alert alert-info" role="info">Costo</th>
                        <th class="alert alert-info" role="info">Precio</th>
                        <th class="alert alert-info" role="info">Importe por pieza</th>
                        <th class="alert alert-info" role="info">ID hoja</th>
                        <th class="alert alert-info" role="info">ID Mecanico asignado</th>
                      </tr>
                    </thead>
                    <tbody>
                      @each(repuesto in repuestos)
                        <tr>
                          <td>{{repuesto.id}}</td>
                          <td>{{repuesto.descripcion}}</td>
                          <td>{{repuesto.costounit}}</td>
                          <td>{{repuesto.preciounit}}</td>
                          <td>{{repuesto.imp_parcial}}</td>
                          <td>{{repuesto.hojadeparte_idHOJA}}</td>
                          <td>{{repuesto.hojadeparte_mecanicoresponsable_idMEC}}</td>
                          <td>
                            
                              <a class="btn btn-info" href="/repuestos/editar/{{repuesto.id}}">EDITAR</a>
                            
                          </td>
                          <td>
                            
                              <a class="btn btn-danger" href="/repuestos/eliminar/{{repuesto.id}}">ELIMINAR</a>
                           
                          </td>
                          </td>
                        </tr>
                      @endeach
                    </tbody>
                </table>
              </div>
              <div>
                <div>
                  <h3>LISTA DE HOJAS DE PARTES</h3>
                  
                </div>
                <table>
                  <thead>
                    <tr>
                      <th class="alert alert-danger" role="info">ID hoja</th>
                      <th class="alert alert-danger" role="info">Concepto</th>
                      <th class="alert alert-danger" role="info">Cantidad</th>
                      <th class="alert alert-danger" role="info">Objeto</th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(hoja in hojas)
                    <tr>
                      <td>{{hoja.id}}</td>
                      <td>{{hoja.concepto}}</td>
                      <td>{{hoja.cantidad}}</td>
                      <td>{{hoja.reparacion}}</td>
                    </tr>
                    @endeach
                  </tbody>
                </table>
              </div>
            <div>
              <div>
                <h3>LISTA DE MECANICOS</h3>
                <br>
              </div>
                <table>
                  <thead>
                    <tr>
                      <th class="alert alert-secondary" role="info">ID</th>
                      <th class="alert alert-secondary" role="info">Nombre</th>
                      <th class="alert alert-secondary" role="info">Direccion</th>
                      <th class="alert alert-secondary" role="info">Telefono</th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(mecanico in mecanicos)
                      <tr>
                        <td>{{mecanico.id}}</td>
                        <td>{{mecanico.nombre}}</td>
                        <td>{{mecanico.direccion}}</td>
                        <td>{{mecanico.tel}}</td>
                      </tr>
                    @endeach
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
