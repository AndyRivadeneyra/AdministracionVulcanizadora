<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>FACTURAS</title>
</head>
  <body>
  
    <div>
        <nav class="text-center">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn btn-success" href="/clientes">CLIENTES</a>
                <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
                <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
                <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
            </div>
        </nav>
    <div> 
        <div class="text-center">
          <h1 class="alert alert-danger" role="danger">FACTURAS</h1>
        <div>
              <div>
                <div>
                  
                  <div>
                    <a class="btn btn-danger" href="/factura/crear">CREAR FACTURA</a>
                  </div>
                </div>
              </div>
          </div>
            <div>
              <div>
                <h3 class="alert alert-danger" role="danger">FACTURAS DE CLIENTES</h3>
                <br>
              </div>
                <table>
                  <thead>
                    <tr>
                      <th class="alert alert-info" role="info">ID</th>
                      <th class="alert alert-info" role="info">Fecha</th>
                      <th class="alert alert-info" role="info">Importe en pesos</th>
                      <th class="alert alert-info" role="info">Importes en dolares</th>
                      <th class="alert alert-info" role="info">RFC</th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(factura in facturas)
                      <tr>
                        <td>{{factura.id}}</td>
                        <td>{{factura.fecha}}</td>
                        <td>{{factura.imp_pesos}}</td>
                        <td>{{factura.imp_dol}}</td>
                        <td>{{factura.rfc}}</td>
                        <td>
                          <li>
                            <a class="btn btn-danger" href="/factura/eliminar/{{factura.id}}">Eliminar</a>
                          </li>
                        </td>
                        </td>
                      </tr>
                    @endeach
                  </tbody>
              </table>
            </div>
        </div>
      </div>

    </div>
  </body>
</html>
