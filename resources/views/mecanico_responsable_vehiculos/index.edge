<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>MECANICO-VEHICULO</title>
</head>
  <body>
      <nav class="text-center">
          <div class="btn-group" role="group" aria-label="Basic example">
              <a class="btn btn-success" href="/clientes">CLIENTES</a>
              <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
              <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
              <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
          </div>
      </nav>
      <div class="text-center">
        <h4 class="alert alert-primary" role="primary">MECANICO A VEHICULO</h4>
        
        <a class="btn btn-primary" href="/mecanico_vehiculo/crear" >Crear Asignacion</a>
      </div>
      <div class="text-center" id="mecanicos_vehiculos">
        <div>
            <h3 class="alert alert-primary" role="primary">LISTA DE VEHICULOS ASIGNADOS A MECANICOS</h3>
        </div>
          <table>
              <thead>
                <tr>
                  <th class="alert alert-info">ID asignado</th>
                  <th class="alert alert-info">ID vehiculo</th>
                  <th class="alert alert-info">Modelo</th>
                  <th class="alert alert-info">ID mecanico</th>
                  <th class="alert alert-info">Nombre</th>
                </tr>
              </thead>
              <tbody>
                @each(mecanico_vehiculo in mecanico_vehiculos)
                  <tr>
                    <td>{{mecanico_vehiculo.id}}</td>
                    <td>{{mecanico_vehiculo.vehiculo_idMATRICULA}}</td>
                    <td>{{mecanico_vehiculo.vehiculo.modelo}}</td>
                    <td>{{mecanico_vehiculo.mecanico_idMEC}}</td>
                    <td>{{mecanico_vehiculo.mecanico.nombre}}</td>
                    <td>
                      <li>
                        <a class="btn btn-info" href="/mecanico_vehiculo/editar/{{mecanico_vehiculo.id}}">Editar</a>
                      </li>
                    </td>
                    <td>
                      <li>
                        <a class="btn btn-danger" href="/mecanico_vehiculo/eliminar/{{mecanico_vehiculo.id}}">Eliminar</a>
                      </li>
                    </td>
                    </td>
                  </tr>
                @endeach
              </tbody>
          </table>
      </div>
      <div>
        <div class="text-center">
          <h3 class="alert alert-secondary" role="sacondary">LISTA DE MECANICOS</h3>
          <br>
        </div>
        <table>
            <thead>
              <tr>
                <th class="alert alert-info">ID Mecanico</th>
                <th class="alert alert-info">Nombre</th>
                <th class="alert alert-info">Direccion</th>
                <th class="alert alert-info">Telefono</th>
              </tr>
            </thead>
            <tbody>
              @each(mecanico in mecanicos)
                <tr>
                  <td>{{mecanico.id}}</td>
                  <td>{{mecanico.nombre}}</td>
                  <td>{{mecanico.direccion}}</td>
                  <td>{{mecanico.tel}}</td>
                </tr>
              @endeach
            </tbody>
          </table>
      </div>
      <div>
        <div class="text-center">
          <h3 class="alert alert-dark" role="dark">LISTA DE VEHICULOS</h3>
          <br>
        </div>
        <table>
          <thead>
            <tr>
              <th class="alert alert-info">ID Vehiculo</th>
              <th class="alert alert-info">Modelo</th>
              <th class="alert alert-info">Color</th>
              <th class="alert alert-info">ID Cliente</th>
            </tr>
          </thead>
          <tbody>
            @each(vehiculo in vehiculos)
            <tr>
                <td>{{vehiculo.id}}</td>
                <td>{{vehiculo.modelo}}</td>
                <td>{{vehiculo.color}}</td>
                <td>{{vehiculo.cliente_idrfc}}</td>
            </tr>
            @endeach
          </tbody>
        </table>
      </div>
  </body>
</html>
