<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>MECANICO</title>
</head>
  <body>
    <div>
        <nav class="text-center">
            <div class="btn-group" role="group" aria-label="Basic example">
                <a class="btn btn-success" href="/clientes">CLIENTES</a>
                <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
                <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
                <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
            </div>
        </nav>
      <div>

        
        <div class="text-center">
          <h1 class="alert alert-secondary" role="scondary">MECANICOS</h1>
          <a class="btn btn-secondary" href="/mecanico_responsable/crear">AGREGAR MECANICO</a>
          <a class="btn btn-secondary" href="/mecanico_vehiculo">ASIGNAR VEHICULO</a>
        </div>
        <div class="text-center">
          <h3 class="alert alert-secondary" role="scondary">LISTA DE MECANICOS</h3>
          <br>
        </div>
        <div>
            <table>
                <thead>
                  <tr>
                    <th class="alert alert-info" role="info">ID</th>
                    <th class="alert alert-info" role="info">Nombre</th>
                    <th class="alert alert-info" role="info">Direccion</th>
                    <th class="alert alert-info" role="info">Telefono</th>
                    <th class="alert alert-info" role="info">Sueldo por hora</th>
                    <th class="alert alert-info" role="info">Categoria</th>
                  </tr>
                </thead>
                <tbody>
                  @each(mecanico in mecanicos)
                    <tr>
                      <td>{{mecanico.id}}</td>
                      <td>{{mecanico.nombre}}</td>
                      <td>{{mecanico.direccion}}</td>
                      <td>{{mecanico.tel}}</td>
                      <td>{{mecanico.costoxhora}}</td>
                      <td>{{mecanico.categoria}}</td>
                      <td></td>
                       <td></td>
                      <td>
                        <li>
                          <a class="btn btn-info" href="/mecanico_responsable/editar/{{mecanico.id}}">EDITAR</a>
                        </li>
                      </td>
                      <td>
                        <li>
                          <a class="btn btn-danger" href="/mecanico_responsable/eliminar/{{mecanico.id}}">ELIMINAR</a>
                        </li>
                      </td>
                      </td>
                    </tr>
                  @endeach
                </tbody>
            </table>
        </div>
  </body>
</html>
