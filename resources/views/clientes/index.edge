<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>CLIENTES</title>
</head>
  <body >  
      <nav class="text-center">
          <div class="btn-group" role="group" aria-label="Basic example">
              <a class="btn btn-success" href="/clientes">CLIENTES</a>
              <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
              <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
              <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
          </div>
      </nav>  
      <div>     
        <div class="text-center">
          <h3 class="alert alert-warning" role="warning">CLIENTES</h3>
          <a class="btn btn-warning" href="/clientes/crear">AGREGAR CLIENTE</a>
        <div> 
      </div> 
      <div class="text-center">
          <h3 class="alert alert-dark" role="dark">VEHICULOS</h3>
          <a class="btn btn-dark" href="/vehiculos">CREAR VEHICULOS</a>
      </div> 
      <div class="text-center">
        <h3 class="alert alert-info" role="info">LISTA DE CLIENTES</h3>
      </div>
      <div class="text-center">
          <table>
              <thead>
                <tr>
                  <th class="alert alert-info" role="info">RFC Cliente</th>
                  <th class="alert alert-info" role="info">Nombre</th>
                  <th class="alert alert-info" role="info">Direccion</th>
                  <th class="alert alert-info" role="info">Telefono</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                @each(cliente in clientes)
                  <tr>
                    <td>{{cliente.id}}</td>
                    <td>{{cliente.nombre}}</td>
                    <td>{{cliente.direccion}}</td>
                    <td>{{cliente.telefono}}</td>
                    <td>
                      
                        <a class="btn btn-info" href="/clientes/editar/{{cliente.id}}">Editar</a>
                      
                    </td>
                    <td>
                      
                        <a class="btn btn-danger" href="/clientes/eliminar/{{cliente.id}}">Eliminar</a>
                      
                    </td>
                    </td>
                  </tr>
                @endeach
              </tbody>
          </table>
      </div>
  </body>
</html>
