<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://drive.google.com/uc?authuser=0&id=1w-OStGxF1oCWETeVHDeBXtJV7-iWoR4t&export=download" type="text/css">
  <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/simple-sidebar.css" rel="stylesheet" type="text/css">
  <link href="css/modern-business.css" rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <title>HOJA DE PARTES</title>
</head>
  <body>
      <nav class="text-center">
          <div class="btn-group" role="group" aria-label="Basic example">
              <a class="btn btn-success" href="/clientes">CLIENTES</a>
              <a class="btn btn-success" href="/mecanico_responsable">MECANICOS</a>
              <a class="btn btn-success" href="/repuestos">REFACCIONES</a>
              <a class="btn btn-success" href="/factura">TRANSACCIONES</a>
          </div>
      </nav>

      <div>

        
        <div>
          <div>
              <div>
              </div>
              <div>
                <div>
                  <div>
                      <div class="text-center">
                          <h3 class="alert alert-danger" role="danger">HOJAS DE PARTES</h3>
                      <a class="btn btn-danger" href="/hoja_de_parte/crear">AGREGAR HOJA</a>
                    </div>
                </div>
              </div>
            </div>
            <div>
              <div id="hojas">
                <table>
                    <thead>
                      <tr>
                        <th class="alert alert-info" role="info">ID hoja</th>
                        <th class="alert alert-info" role="info">Concepto</th>
                        <th class="alert alert-info" role="info">Cantidad</th>
                        <th class="alert alert-info" role="info">Objeto a reparar</th>
                        <th class="alert alert-info" role="info">Mecanico responsable</th>
                      </tr>
                    </thead>
                    <tbody>
                      @each(hoja in hojas)
                        <tr>
                          <td>{{hoja.id}}</td>
                          <td>{{hoja.concepto}}</td>
                          <td>{{hoja.cantidad}}</td>
                          <td>{{hoja.reparacion}}</td>
                          <td>{{hoja.mecanico_responsable_idMEC}}</td>
                          <td>
                              <a class="btn btn-info" href="/hoja_de_parte/editar/{{hoja.id}}">Editar</a>
                          </td>
                          <td>
                            <li>
                              <a class="btn btn-danger" href="/hoja_de_parte/eliminar/{{hoja.id}}">Eliminar</a>
                            </li>
                          </td>
                          </td>
                        </tr>
                      @endeach
                    </tbody>
                </table>
              </div>
              <div>
                <div class="text-center">
                  <h3 class="alert alert-secondary" role="secondary">LISTA DE MECANICOS</h3>
                  <br>
                </div>
                <table>
                  <thead>
                    <tr>
                      <th class="alert alert-info" role="info">ID</th>
                      <th class="alert alert-info" role="info">Nombre</th>
                      <th class="alert alert-info" role="info">Direccion</th>
                      <th class="alert alert-info" role="info">Telefono</th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(mecanico in mecanicos)
                      <tr>
                        <td>{{mecanico.id}}</td>
                        <td>{{mecanico.nombre}}</td>
                        <td>{{mecanico.direccion}}</td>
                        <td>{{mecanico.tel}}</td>
                      </tr>
                    @endeach
                  </tbody>
                </table>
              </div>
            </div>
        </div>
      </div>

    </div>
  </body>
</html>
